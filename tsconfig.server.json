{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/server",
    "target": "ES2022",
    "types": [
      "node"
    ],
    "moduleResolution": "node"
  },
  "files": [
    "src/main.server.ts",
    "server.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "server.ts",
    "src/main.server.ts",
    "src/app/**/*.ts",
    "src/app/**/*.server.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts"
  ]
} 